<Styles xmlns="https://github.com/avaloniaui"
        xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
        xmlns:behaviors="clr-namespace:WalletWasabi.Fluent.Behaviors">

  <Style Selector="ContextMenu StackPanel">
    <Setter Property="Spacing" Value="10" />
    <Setter Property="Margin" Value="10 0" />
  </Style>

  <Style Selector="ContextMenu MenuItem /template/ Viewbox#PART_IconPresenter">
    <Setter Property="(i:Interaction.Behaviors)">
      <i:BehaviorCollectionTemplate>
        <i:BehaviorCollection>
          <behaviors:MenuItemIconSizeBehavior />
        </i:BehaviorCollection>
      </i:BehaviorCollectionTemplate>
    </Setter>
  </Style>

</Styles>
