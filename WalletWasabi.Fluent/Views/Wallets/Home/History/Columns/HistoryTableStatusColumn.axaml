<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:historyItems="clr-namespace:WalletWasabi.Fluent.ViewModels.Wallets.Home.History.HistoryItems"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="historyItems:HistoryItemViewModelBase"
             x:CompileBindings="True"
             x:Class="WalletWasabi.Fluent.Views.Wallets.Home.History.Columns.HistoryTableStatusColumn">

  <Panel x:DataType="historyItems:HistoryItemViewModelBase">
    <!-- Confirmed -->
    <StackPanel IsVisible="{Binding IsConfirmed}">
      <PathIcon Data="{StaticResource checkmark_filled}"
                Foreground="{DynamicResource SystemAccentColor}"
                Height="11"
                ToolTip.Tip="Confirmed"/>
      <TextBlock Classes="monoSpaced" Text="Confirmed" />
    </StackPanel>
    <!-- Pending -->
    <StackPanel IsVisible="{Binding !IsConfirmed}">
      <PathIcon Data="{StaticResource clock_regular}"
                Height="14"
                Opacity="0.6"
                ToolTip.Tip="Pending"/>
      <TextBlock Classes="monoSpaced" Text="Pending" />
    </StackPanel>
  </Panel>

</UserControl>
